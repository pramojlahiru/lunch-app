<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <!-- Same navigation as home.ejs -->
    </nav>

    <div class="max-w-6xl mx-auto py-12 px-4">
        <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Meal Preferences Overview</h2>
            
            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-green-100 p-6 rounded-xl">
                    <h3 class="text-green-600 font-bold mb-2">Total Submissions</h3>
                    <p class="text-3xl font-bold text-gray-800">
                        <%= preferences.reduce((sum, p) => sum + p.count, 0) %>
                    </p>
                </div>
            </div>

            <!-- Data Table -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Meal Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Count</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% preferences.forEach(p => { %>
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap"><%= p.date %></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-3 py-1 rounded-full text-sm 
                                    <%= p.preference === 'veg' ? 'bg-green-100 text-green-800' : '' %>
                                    <%= p.preference === 'chicken' ? 'bg-orange-100 text-orange-800' : '' %>
                                    <%= p.preference === 'fish' ? 'bg-blue-100 text-blue-800' : '' %>">
                                    <%= p.preference.charAt(0).toUpperCase() + p.preference.slice(1) %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= p.count %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>